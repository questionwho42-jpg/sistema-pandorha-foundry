{
  "id": "pandorha",
  "title": "Pandorha",
  "description": "Sistema Pandorha para Foundry VTT.",
  "version": "0.1.32",
  "compatibility": {
    "minimum": "13",
    "verified": "13.338",
    "maximum": "13"
  },
  "esmodules": ["module/pandorha.mjs"],
  "styles": ["styles/pandorha.css"],
  "manifest": "https://raw.githubusercontent.com/questionwho42-jpg/sistema-pandorha-foundry/main/system.json",
  "download": "https://github.com/questionwho42-jpg/sistema-pandorha-foundry/archive/refs/heads/main.zip",
  "languages": [
    {
      "lang": "pt-BR",
      "name": "Português (Brasil)",
      "path": "lang/pt-BR.json"
    }
  ],
  "initiative": "1d20 + @system.attributes.level + @system.eixos.mental + @system.aplicacoes.interacao",
  "documentTypes": {
    "Actor": {
      "character": {
        "htmlFields": ["description", "details.biography", "details.notes"],
        "filePathFields": {
          "details.crest": ["IMAGE"],
          "details.portrait": ["IMAGE"]
        }
      },
      "npc": {
        "htmlFields": ["description", "details.biography", "details.notes"],
        "filePathFields": {
          "details.crest": ["IMAGE"],
          "details.portrait": ["IMAGE"]
        }
      },
      "monster": {
        "htmlFields": ["description", "details.biography", "details.notes"],
        "filePathFields": {
          "details.crest": ["IMAGE"],
          "details.portrait": ["IMAGE"]
        }
      }
    },
    "Item": {
      "ancestry": { "htmlFields": ["description"] },
      "trait": { "htmlFields": ["description"] },
      "class": { "htmlFields": ["description"] },
      "talent": { "htmlFields": ["description"] },
      "maneuver": { "htmlFields": ["description"] },
      "spell": { "htmlFields": ["description"] },
      "weapon": { "htmlFields": ["description"] },
      "armor": { "htmlFields": ["description"] },
      "shield": { "htmlFields": ["description"] },
      "equipment": { "htmlFields": ["description"] },
      "consumable": { "htmlFields": ["description"] },
      "condition": { "htmlFields": ["description"] },
      "background": { "htmlFields": ["description"] },
      "feature": { "htmlFields": ["description"] },
      "ability": { "htmlFields": ["description"] },
      "rune": { "htmlFields": ["description"] },
      "disease": { "htmlFields": ["description"] },
      "toxin": { "htmlFields": ["description"] }
    }
  },
  "packs": [
    {"name": "ancestries", "label": "Ancestralidades", "path": "packs/ancestries.db", "type": "Item"},
    {"name": "traits", "label": "Traços", "path": "packs/traits.db", "type": "Item"},
    {"name": "classes", "label": "Classes", "path": "packs/classes.db", "type": "Item"},
    {"name": "class-features", "label": "Características de Classe", "path": "packs/class-features.db", "type": "Item"},
    {"name": "talents", "label": "Talentos", "path": "packs/talents.db", "type": "Item"},
    {"name": "maneuvers", "label": "Manobras", "path": "packs/maneuvers.db", "type": "Item"},
    {"name": "spells", "label": "Magias", "path": "packs/spells.db", "type": "Item"},
    {"name": "equipment", "label": "Equipamentos", "path": "packs/equipment.db", "type": "Item"},
    {"name": "conditions", "label": "Condições", "path": "packs/conditions.db", "type": "Item"},
    {"name": "backgrounds", "label": "Antecedentes", "path": "packs/backgrounds.db", "type": "Item"},
    {"name": "runes", "label": "Runas", "path": "packs/runes.db", "type": "Item"},
    {"name": "diseases", "label": "Enfermidades", "path": "packs/diseases.db", "type": "Item"},
    {"name": "toxins", "label": "Toxinas", "path": "packs/toxins.db", "type": "Item"},
    {"name": "bestiary", "label": "Bestiário", "path": "packs/bestiary.db", "type": "Actor"},
    {"name": "monster-abilities", "label": "Habilidades de Monstros", "path": "packs/monster-abilities.db", "type": "Item"}
  ]
}


